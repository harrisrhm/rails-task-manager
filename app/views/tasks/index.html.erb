<h1>My Tasks</h1>

<ul>
    <% @tasks.each do |task| %>
        <li><%= task.completed ? icon('far', 'check-square') : icon('far', 'square') %> <%= link_to task.title, task_path(task) %> <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
            <%= icon('far', 'trash-alt') %>
            <% end %></li>
    <% end %>
</ul>

<%= link_to "Add new tasks", new_task_path %>